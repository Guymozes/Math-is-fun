<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View style="@style/Divider"
            android:layout_weight="4"/>
        <EditText
            android:id="@+id/nameEditText"
            android:textColorHint="@color/colorPrimaryFade"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="10dp"
            android:inputType="text"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>

        <View style="@style/Divider" />


        <EditText
            android:id="@+id/ageEditText"
            android:textColorHint="@color/colorPrimaryFade"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/hebrewBtn"
                android:theme="@style/OurTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_israel"
                android:text="עברית"
                android:textSize="15dp" />

            <Button
                android:id="@+id/englishBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/OurTheme"
                android:drawableTop="@drawable/ic_usa"
                android:text="English"
                android:textSize="15dp" />

            <Button
                android:id="@+id/arabicBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/OurTheme"
                android:drawableTop="@drawable/ic_egypt"
                android:text="عربي"
                android:textSize="15dp" />

            <Button
                android:id="@+id/russianBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/OurTheme"
                android:drawableTop="@drawable/ic_russia"
                android:text="русский"
                android:textSize="15dp" />
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/singleModeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/OurTheme"
                android:drawableTop="@drawable/ic_single_mode"
                android:text="@string/single_mode"
                android:textSize="15dp" />

            <Button
                android:id="@+id/multiModeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/OurTheme"
                android:drawableTop="@drawable/ic_multi_mode"
                android:text="@string/multi_mode"
                android:textSize="15dp" />
        </LinearLayout>
        <View style="@style/Divider" />
        <!--<TextView-->
            <!--android:gravity="center"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Reset:" />-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:theme="@style/OurTheme"
            android:layout_gravity="center"
            android:text="@string/reset_history"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/saveDetailsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/save_details"
            android:theme="@style/OurTheme"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/signoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/ic_exit"
            android:text="@string/signout"
            android:textSize="12sp"
            android:theme="@style/OurTheme" />
    </LinearLayout>
        <View style="@style/Divider"
            android:layout_weight="4"/>
    </LinearLayout>

</RelativeLayout>