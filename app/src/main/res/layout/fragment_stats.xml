<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Level is:" />
        <SeekBar
            android:id="@+id/levelBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="10"  />
        <View style="@style/Divider" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day Strike:" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:scaleType="fitXY"
                android:layout_height="75dp"
                android:layout_width="75dp"
                android:id="@+id/sevenDaysBtn"
                android:src="@drawable/ic_7_days"
                android:padding="20dp"
                android:alpha="0.5"/>
            <ImageButton
                android:id="@+id/fourteenDaysBtn"
                android:scaleType="fitXY"
                android:layout_height="75dp"
                android:layout_width="75dp"
                android:src="@drawable/ic_14_days"
                android:padding="15dp"
                android:alpha="0.5"/>
            <ImageButton
                android:id="@+id/thirtyDaysBtn"
                android:scaleType="fitXY"
                android:layout_height="75dp"
                android:layout_width="75dp"
                android:src="@drawable/ic_30_days"
                android:padding="10dp"
                android:alpha="0.5"/>
        </LinearLayout>

        <View style="@style/Divider" />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Max Points Per Day:" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/p2000Btn"
                android:scaleType="fitXY"
                android:layout_height="75dp"
                android:layout_width="75dp"
                android:src="@drawable/ic_two"
                android:padding="20dp"
                android:alpha="0.5"/>

            <ImageButton
                android:id="@+id/p4000Btn"
                android:scaleType="fitXY"
                android:layout_height="75dp"
                android:layout_width="75dp"
                android:src="@drawable/ic_four"
                android:padding="15dp"
                android:alpha="0.5"/>
            <ImageButton
                android:id="@+id/p6000Btn"
                android:scaleType="fitXY"
                android:layout_height="75dp"
                android:layout_width="75dp"
                android:src="@drawable/ic_six"
                android:padding="10dp"
                android:alpha="0.5"/>
        </LinearLayout>

        <View style="@style/Divider" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tests In A Row:" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/c1Frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5">
            <ImageButton
                android:id="@+id/c1Btn"
                android:scaleType="centerCrop"
                android:layout_height="75dp"
                android:layout_width="60dp"
                android:src="@drawable/ic_exam"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"/>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/c3Frame"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:alpha="0.5">
                <ImageButton
                    android:id="@+id/c3Btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|start"
                    android:src="@drawable/ic_exam"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:gravity="center" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|center"
                    android:src="@drawable/ic_exam"
                    android:background="@android:color/transparent"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_exam"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:gravity="center" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/c5Frame"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:alpha="0.5">
                <ImageButton
                    android:id="@+id/c5Btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|start"
                    android:src="@drawable/ic_exam"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:src="@drawable/ic_exam"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:gravity="center" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|start"
                    android:src="@drawable/ic_exam"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:gravity="center" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_exam"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:gravity="center" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|center"
                    android:src="@drawable/ic_exam"
                    android:background="@android:color/transparent"
                    android:gravity="center" />


            </FrameLayout>
        </LinearLayout>

        <View style="@style/Divider" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trophy:" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/trophyBtn"
                android:scaleType="fitXY"
                android:layout_height="120dp"
                android:layout_width="120dp"
                android:src="@drawable/ic_award"
                android:padding="12dp"
                android:alpha="0.5"
                />
        </LinearLayout>

        <View style="@style/Divider" />

    </LinearLayout>

</RelativeLayout>